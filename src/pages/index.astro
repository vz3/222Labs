---
import Layout from "../layouts/Layout.astro";

const title = "222Labs";
const description = "Quietly building the future of fitness.";
const tagline = "Building the future of fitness.";
---

<Layout {title} {description}>
  <main class="container" aria-labelledby="site-title">
    <header class="header">
      <h1 id="site-title" class="visually-hidden">{title}</h1>
      <img
        src="/logo.svg"
        alt="222Labs logo"
        width="1200"
        height="300"
        class="logo"
        loading="eager"
        decoding="async"
        fetchpriority="high"
      />
      <p class="tagline">{tagline}</p>
      <a href="#" onclick="location.href='mailto:' + 'hello' + '@' + '222labs' + '.' + 'co'; return false;" class="email-link">
        <span>hello</span><span>@</span><span>222labs</span><span>.</span><span>co</span>
      </a>
    </header>

    <section class="meta" aria-label="Company">
      <p>222 Labs, LLC</p>
    </section>
  </main>
</Layout>

<style>
  .container {
    display: grid;
    place-items: center;
    min-height: 100dvh;
    padding: 6vh 5vw;
  }

  .header {
    display: grid;
    gap: 1.25rem;
    text-align: center;
  }

  .logo {
    width: min(50rem, 90vw);
    aspect-ratio: 4 / 1;
  }

  .tagline {
    font-size: clamp(1rem, 0.9rem + 0.5vw, 1.25rem);
    color: #333333;
    letter-spacing: 0.02em;
    opacity: 0.85;
  }

  .email-link {
    color: #333333;
    text-decoration: none;
    border-bottom: 1px dotted #333333;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    display: inline-block;
    width: fit-content;
    margin: 0 auto;
  }

  .email-link:hover {
    border-bottom: 1px solid #333333;
  }

  .meta {
    position: fixed;
    inset-block-end: 1rem;
    inset-inline: 0;
    text-align: center;
    font-size: 0.75rem;
    opacity: 0.6;
  }

  .visually-hidden {
    position: absolute !important;
    height: 1px; width: 1px;
    overflow: hidden; clip: rect(1px, 1px, 1px, 1px);
    white-space: nowrap; border: 0; padding: 0; margin: -1px;
  }
</style>